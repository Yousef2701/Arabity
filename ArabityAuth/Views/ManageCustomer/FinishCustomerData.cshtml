@model ArabityAuth.ViewModel.FinishCustomerDataVM
@{
    ViewData["Title"] = "Finish Customer Data";
}

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/all.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Climate+Crisis&family=Roboto:wght@100;300;400;500;700;900&family=Sigmar+One&display=swap" rel="stylesheet">
    <title>Sign Up</title>
</head>
<body>
    <form asp-action="FinishCustomerData" class="needs-validation container p-5" novalidate="" enctype="multipart/form-data">
        <div class="row g-3 justify-content-center my-2" style="margin-left: auto;margin-right: auto;">
            <h2 class="col-8 my-3 text-center" style="color: cadetblue;">Complete Your Data</h2>
            <div class="col-8 d-none">
                <label asp-for="UserName" class="control-label">Email</label>
                <div class="input-group has-validation">
                    <input asp-for="UserName" type="text" class="form-control" id="completeUsername" placeholder="Email" required="">
                    <div class="invalid-feedback">
                        Your username is required.
                    </div>
                </div>
            </div>
            <div class="col-8">
                <label asp-for="FristName" class="control-label">Frist Name</label>
                <div class="input-group has-validation">
                    <input asp-for="FristName" type="text" class="form-control" id="FristName" placeholder="Frist Name" required="">
                    <div class="invalid-feedback">
                        Your username is required.
                    </div>
                </div>
            </div>
             <div class="col-8">
                <label asp-for="LastName" class="control-label">Last Name</label>
                <div class="input-group has-validation">
                    <input asp-for="LastName" type="text" class="form-control" id="LastName" placeholder="Last Name" required="">
                    <div class="invalid-feedback">
                        Your username is required.
                    </div>
                </div>
            </div>
            <div class="col-8">
                <label asp-for="PhoneNumbre" class="control-label">Phone Numbre</label>
                <input asp-for="PhoneNumbre" type="tel" class="form-control" id="phone" placeholder="Phone-Numper" required="">
                <div class="invalid-feedback">
                    Please enter your shipping phone.
                </div>
            </div>
            <div class="col-8">
                <label asp-for="GmailAddress" class="control-label">Gmail Address</label>
                <input asp-for="GmailAddress" type="text" class="form-control" id="address" placeholder="Gmail Address" required="">
                <div class="invalid-feedback">
                    Please enter your shipping address.
                </div>
            </div>
            <div class="col-8 d-flex justify-content-between align-items-baseline">
                <div class="col-5">
                    <label asp-for="Governorate" class="form-label">Governorate</label>
                    <select asp-for="Governorate" class="form-select" id="governorates" onchange="updateCities()" required="">
                        <option value="" selected>Select a Governorate</option>
                        <option value="Alexandria">Alexandria</option>
                        <option value="Aswan">Aswan</option>
                        <option value="Asyut">Asyut</option>
                        <option value="Beheira">Beheira</option>
                        <option value="Beni Suef">Beni Suef</option>
                        <option value="Cairo">Cairo</option>
                        <option value="Dakahlia">Dakahlia</option>
                        <option value="Damietta">Damietta</option>
                        <option value="Faiyum">Faiyum</option>
                        <option value="Gharbia">Gharbia</option>
                        <option value="Giza">Giza</option>
                        <option value="Ismailia">Ismailia</option>
                        <option value="Kafr El Sheikh">Kafr El Sheikh</option>
                        <option value="Luxor">Luxor</option>
                        <option value="Matruh">Matruh</option>
                        <option value="Minya">Minya</option>
                        <option value="Monufia">Monufia</option>
                        <option value="New Valley">New Valley</option>
                        <option value="North Sinai">North Sinai</option>
                        <option value="Port Said">Port Said</option>
                        <option value="Qalyubia">Qalyubia</option>
                        <option value="Qena">Qena</option>
                        <option value="Red Sea">Red Sea</option>
                        <option value="Sharqia">Sharqia</option>
                        <option value="Sohag">Sohag</option>
                        <option value="South Sinai">South Sinai</option>
                        <option value="Suez">Suez</option>
                    </select>
                    <div class="invalid-feedback">
                        Please select a valid country.
                    </div>
                </div>
                <div class="col-5">
                    <label asp-for="City" class="form-label">City</label>
                    <select asp-for="City" class="form-select" id="cities" required="">
                    </select>
                    <div class="invalid-feedback">
                        Please provide a valid state.
                    </div>
                </div>
            </div>
            <div class="col-8">
                <input type="file" asp-for="ImageFile" enctype="multipart/form-data" accept="image/jpg" />
            </div>
            <button type="submit" value="Save" class="contact col-5">Save</button>
        </div>
    </form>
