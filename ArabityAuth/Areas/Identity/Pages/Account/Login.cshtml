@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/all.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Climate+Crisis&family=Roboto:wght@100;300;400;500;700;900&family=Sigmar+One&display=swap" rel="stylesheet">
    <title>ٌLog In</title>
</head>
<body>
    <form id="account" class="needs-validation container p-5" method="post">
        <div class="row g-3 justify-content-center my-2" style="margin-left: auto;margin-right: auto;">
            <h2 class="col-8 my-3 text-center" style="color: cadetblue;">Log In</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="col-8">
                <label asp-for="Input.Email" class="form-label">Email</label>
                <input asp-for="Input.Email" class="form-control" id="exampleDropdownFormEmail1" placeholder="you@arabity.com" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="col-8">
                <label asp-for="Input.Password" class="form-label">Password</label>
                <input asp-for="Input.Password" class="form-control" id="exampleDropdownFormEmail1" placeholder="Password" autocomplete="current-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <div class="checkbox col-8" style="margin-left: auto;margin-right: auto;">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <button id="login-submit" type="submit" class="contact my-3 col-5">Log in</button>
            <div class="col-8 row g-1">
                <a class="col-8"  id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                <a class="col-8"  asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
            </div>
        </div>
    </form>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
    <script src="~/js/landing.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/all.min.js"></script>
</body>

</html>